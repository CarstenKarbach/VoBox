<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="100"
    >

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            >
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:src="@drawable/newcard"
                android:scaleType="fitCenter"
                android:background="#ffc"
                android:padding="4dp"
                android:id="@+id/newcard_imagebutton"
                />
        <Button
           android:layout_width="match_parent"
           android:layout_height="match_parent"
            android:text="neue Vokabel"
            android:layout_gravity="center_vertical"
            android:background="#ffc"
            android:id="@+id/newcard_button"
           android:padding="0dp"
            />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            >
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:src="@drawable/wordlist"
            android:scaleType="fitCenter"
            android:background="#cfc"
            android:padding="4dp"
            android:id="@+id/list_imagebutton"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Liste WÃ¶rterbuch"
            android:layout_gravity="center_vertical"
            android:background="#cfc"
            android:id="@+id/list_button"
            />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            >
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:src="@drawable/boxpart"
            android:scaleType="fitCenter"
            android:background="#ccf"
            android:padding="4dp"
            android:id="@+id/box_imagebutton"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Box"
            android:layout_gravity="center_vertical"
            android:background="#ccf"
            android:id="@+id/box_button"
            />
        </LinearLayout>

    </TableRow>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:layout_gravity="center_vertical|center_horizontal"
        >
    <Spinner
        android:id="@+id/language_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        ></Spinner>

    </FrameLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="exportieren"
            android:id="@+id/button_export"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="flexible Liste"
            android:id="@+id/button_selectcards"
            />

    </TableRow>

</LinearLayout>